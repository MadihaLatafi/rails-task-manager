<h1>These are all the uncompleted tasks</h1>

<%= link_to "New task", new_task_path %>

<ul>
  <% Task.uncompleted_tasks.each do |task| %>
  <li>
    <h2>
      <%= link_to task.name, task_path(task) %>
    </h2>
    <p>
      <%= link_to "Edit", edit_task_path(task) %>
    </p>
    <br>
    <p>
      <%= link_to "Delete", task_path(task) %>
    </p>
  </li>
  <% end %>
</ul>


<h1>These are all the tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li>
    <h2>
      <%= link_to task.name, task_path(task) %>:
    </h2>
    <p>Status:
      <%= task.status(task) %>
    </p>
    <p>
      <%= link_to "Edit", edit_task_path(task) %>
    </p>
    <br>
    <p>
      <%= link_to "Delete", task_path(task), :confirm => 'Are you sure?', :method => :delete %>
    </p>
  </li>
  <% end %>
</ul>
